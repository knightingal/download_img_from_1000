{
    "name": "Page Redder",
    "description": "Make the current page red",
    "version": "2.0",
    "permissions": [
        "tabs"
    ],
    "background": {
        "scripts": ["background.js", "json.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Make this page red"
    },
    "content_scripts": [
        {
            "matches":["http://www.1000rt.net/*"],
            "js":["json.js", "content_script.js"],
            "run_at":"document_end"
        }
    ],
    "manifest_version": 2,
    "permissions": [
        "tabs", "http://*/"
    ]

}


